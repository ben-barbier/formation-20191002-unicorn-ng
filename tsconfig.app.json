{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "module": "es2015",
        "types": [],
        "paths": {
            "moment": [
                "../node_modules/moment/min/moment.min.js",
                "../node_modules/moment/locale/fr.js"
            ]
        }
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/test.ts",
        "src/**/*.spec.ts"
    ],
    "allowSyntheticDefaultImports": true
}
